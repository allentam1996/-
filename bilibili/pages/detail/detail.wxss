.main{
  padding: 10rpx;
  color:#666;
}

/* 视频窗口部分样式 */
.down image{
    width:13px;
    height: 13px;
}

.video_info{
    margin-top:10rpx; 
}

.video_info video{
  width:100%;
}

.video_title{
  display: flex;
  justify-content: space-between;
  font-size: 15px;
  color: #191d29;
  font-weight: bold;
}

.video_detail{
  margin-top: 10px;
  font-size: 12px;
  font-weight: bold;
}
.video_detail .author{
  margin-right: 10px;
   font-weight: bold;
  color: #191d29;
}

.video_detail .play_conut{
   margin-right: 10px;
}
.video_detail .comment_count{
   margin-right: 10px;
}

/* 推荐视频样式 */
.other_list{
  margin-top:10rpx;
}

.item_other{
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
  margin-top: 10px;
}

.other_img_wrap{
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.other_img_wrap image{
  width: 90%;
  border-radius: 8px;
}


.other_info{
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.other_title{
  font-size: 14px;
  color:#666;
}

.other_detail{
  font-size: 13px;
  color:#666;
}

/*评论样式  */
.comment_wrap{
  margin-top: 10px;
}

.comment_title{
  padding: 10px;
  font-size: 10px;
}

.comment_list{}
.comment_item{
  margin-bottom: 10px;
  padding: 10px;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.comment_user{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.comment_user image{
  width: 90%;
  border-radius: 8px;
}

.comment_info{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.comment_detail{
  display: flex;
  justify-content: space-between;
}

.comment_detail .author{
  font-size: 14px;
  color: #000;
}

.comment_detail .date{
    color: #666;
    font-size: 12px;
  }

  .comment_content{
    font-size: 13px;
    color: #8e8e8e;
  }