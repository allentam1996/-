page{
    color:#666;
    padding: 10rpx;
}
/* 首页导航 */
.nav wrap{}
.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}
.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}
.nav_item.active{
    border-bottom: 5rpx solid #de688d;
}

/* 轮播图部分 */
.sliders{
    margin-top:10rpx;
}
.sliders swiper{
    height: 220rpx;
}
.sliders navigator{
    width: 100%;
    height: 100%;
}
.sliders image{
    width: 100%;
    height: 100%;
}

/*视频列表  */
.play_count_wrap image{
        width: 17px;
        height: 17px;
}

.comment_count_wrap image{
        width: 16px;
        height: 16px;
}

.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding:5rpx;
  justify-content: space-between;
}

.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}

.video_img{
  position: relative;
}
.video_img>image{
  width: 100%;
  border-radius: 10px;
}
.video_img .video_info{
  position: absolute;
  bottom: 0;
  left:0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #ffffff;
  font-size: 12px;
}

.play_count{
position: absolute;
top:0px;
}

.comment_count{
position: absolute;
top:0px;
}

.video_title{
  font-size: 15px;
  display: -webkit-box;
  overflow:hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
